background yes
update_interval 1

cpu_avg_samples 1
net_avg_samples 2
temperature_unit celsius

double_buffer yes
no_buffers yes
text_buffer_size 2048
override_utf8_locale yes
use_xft yes
xftfont caviar dreams:size=10
xftalpha 0.5
uppercase no

gap_x 10
gap_y 30
minimum_size 300 768
maximum_width 300

own_window yes
own_window_type dock
own_window_transparent yes
own_window_argb_visual yes
own_window_colour 000000
own_window_argb_value 80
own_window_hints undecorated,below,sticky,skip_taskbar,skip_pager

border_inner_margin 5
border_outer_margin 0
alignment top_left

draw_shades no
draw_outline no
draw_borders no
draw_graph_borders no

# Defining colors
default_color FFFFFF
# Shades of Gray
color1 DDDDDD
color2 AAAAAA
color3 888888
# Orange
color4 EF5A29
# Blue 08b4cd
color5 ffffff

# Loading lua script for drawning rings
lua_load ./seamod_rings.lua
lua_draw_hook_post main

## System information using conky capabilities

TEXT  
## cpu
# cputemp
${voffset 60}${offset 50}${font sawasdee:size=15,weight:bold}${color5}${hwmon 1 temp 1}째
# cpugraph
${voffset 7}${offset 70}${cpugraph cpu0 10,120}
${voffset -13}${offset 70}${cpugraph cpu1 10,120}
# text "cpu"
${voffset -80}${offset 93}${font Ubuntu:size=10,weight:bold}${color5}CPU
# top process
${voffset -5}${offset 80}${font sawasdee:size=8,weight:bold}${color5}${top name 1}
